{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "allowJs": false,
        "declaration": false,
        "lib": ["es2018","dom"],
        "target": "es5",
        "module": "commonjs",
        "types": ["node"],
        "jsx": "react",
        "outDir": "./install_app/build",
        "baseUrl": "./install_app"
    },
    "include": ["./install_app/**/*.*"],
    "exclude": ["node_modules", "./install_app/build"]
}