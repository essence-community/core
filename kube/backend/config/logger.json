{
    "handlers": {
        "errors": {
            "class": "rufus/handlers/file",
            "file": "/opt/work_gate/logs/ungate_error.log",
            "level": "ERROR"
        },
        "main": {
            "class": "rufus/handlers/rotating",
            "file": "/opt/work_gate/logs/ungate_main.log",
            "maxSize": "30mb",
            "maxFile": "30"
        },
        "console": {
            "class": "rufus/handlers/console"
        }
    },
    "loggers": {
        "root": {
            "level": "INFO",
            "handlers": ["errors"]
        }
    }
}
